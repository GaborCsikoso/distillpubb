{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
    "ENV": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-var": "error",
        "prefer-const": "error",
        "no-unused-vars": [2, {"args": "all", "argsIgnorePattern": "^_"}]
    },
    "plugins": [
        "html"
    ]
}
